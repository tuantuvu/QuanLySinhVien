
@model QuanLySinhVien.Models.ChungLoai.InputChungLoai
@{
    ViewData["Title"] = "Them";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="col-6 px-5 pt-5 border rounded-3 shadow-lg">
        <h2 class="text-center fw-bold pb-4">Thêm thông tin Sản phẩm</h2>
        <hr />
        <form action="/quan-ly-khoa/them-khoa" method="post" enctype="multipart/form-data">
            <div class="mb-4">
                <div asp-validation-summary="All"class="text-danger"></div>
                <label asp-for="MaKhoa" class="form-label fw-bolder">Mã sản phẩm</label>
                <input asp-for="MaKhoa" type="text" class="form-control" id="makhoa" value="" aria-describedby="text">
                <span asp-validation-for="MaKhoa" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="TenKhoa" class="form-label fw-bolder">Tên sản phẩm</label>
                <input asp-for="TenKhoa" type="text" class="form-control" id="tenkhoa" value="" aria-describedby="text">
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Sdt" class="form-label fw-bolder">Chủng loại</label>
                <input asp-for="Sdt" type="number" class="form-control" id="sdt" min="0" value="" aria-describedby="text">
            </div>
            <div class="mb-4">
                <label asp-for="hinhanh" class="form-label fw-bolder">Ảnh đại diện</label>
                <div class="d-flex justify-content-center align-items-center py-2">
                    <img id="showimage" style="width: 450px; height: 300px;" src="~/images/noimage.jpg" alt="..." />
                </div>
                <input asp-for="hinhanh" type="file" class="form-control" id="hinhanh" onchange="readURL(this)" aria-describedby="image">
            </div>
            <hr />
            <div class="d-flex align-items-center justify-content-center my-5 gap-5">
                <button type="submit" id="themgiohang" class="btn btn-primary px-4 py-2">Thêm thông tin Sản phẩm</button>
            </div>
        </form>
    </div>
</div>

<script>
    function readURL(input){
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#showimage').attr('src', e.target.result).width(450).height(300);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

